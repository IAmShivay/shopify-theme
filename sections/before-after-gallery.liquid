{{ 'section-before-after.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .before-after-{{ section.id }} {
    background: {{ section.settings.background_color }};
    {% if section.settings.background_gradient != blank %}
      background: {{ section.settings.background_gradient }};
    {% endif %}
  }
{%- endstyle -%}

<div class="before-after before-after-{{ section.id }} color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding isolate">
    {%- if section.settings.heading != blank -%}
      <div class="before-after__header center">
        <h2 class="before-after__heading inline-richtext {{ section.settings.heading_size }}">
          {{ section.settings.heading }}
        </h2>
        {%- if section.settings.subheading != blank -%}
          <p class="before-after__subheading">{{ section.settings.subheading }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      <div class="before-after__grid">
        {%- for block in section.blocks -%}
          <div class="before-after__item" {{ block.shopify_attributes }}>
            <div class="transformation-card">
              <div class="transformation-card__images">
                <div class="transformation-card__before">
                  {%- if block.settings.before_image != blank -%}
                    {{
                      block.settings.before_image
                      | image_url: width: 400
                      | image_tag:
                        loading: 'lazy',
                        width: 200,
                        height: 200,
                        alt: 'Before transformation'
                    }}
                  {%- endif -%}
                  <div class="transformation-card__label transformation-card__label--before">
                    Before
                  </div>
                </div>
                
                <div class="transformation-card__divider">
                  <span class="transformation-card__arrow">â†’</span>
                </div>
                
                <div class="transformation-card__after">
                  {%- if block.settings.after_image != blank -%}
                    {{
                      block.settings.after_image
                      | image_url: width: 400
                      | image_tag:
                        loading: 'lazy',
                        width: 200,
                        height: 200,
                        alt: 'After transformation'
                    }}
                  {%- endif -%}
                  <div class="transformation-card__label transformation-card__label--after">
                    After
                  </div>
                </div>
              </div>
              
              <div class="transformation-card__content">
                {%- if block.settings.title != blank -%}
                  <h3 class="transformation-card__title">{{ block.settings.title }}</h3>
                {%- endif -%}
                
                {%- if block.settings.timeframe != blank -%}
                  <p class="transformation-card__timeframe">{{ block.settings.timeframe }}</p>
                {%- endif -%}
                
                {%- if block.settings.description != blank -%}
                  <p class="transformation-card__description">{{ block.settings.description }}</p>
                {%- endif -%}
                
                {%- if block.settings.product != blank -%}
                  <div class="transformation-card__product">
                    <span class="transformation-card__product-label">Product used:</span>
                    <a href="{{ block.settings.product.url }}" class="transformation-card__product-link">
                      {{ block.settings.product.title }}
                    </a>
                  </div>
                {%- endif -%}
              </div>
            </div>
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
    
    {%- if section.settings.disclaimer != blank -%}
      <div class="before-after__disclaimer">
        <p>{{ section.settings.disclaimer }}</p>
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Before & After Gallery",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Real Results from Real Customers",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "subheading",
      "default": "See the amazing transformations achieved with our natural skincare products",
      "label": "Subheading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "textarea",
      "id": "disclaimer",
      "label": "Disclaimer text",
      "default": "*Results may vary. Individual results are not guaranteed and may vary from person to person."
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "background-1"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color"
    },
    {
      "type": "color_background",
      "id": "background_gradient",
      "label": "Background gradient"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "transformation",
      "name": "Before & After",
      "settings": [
        {
          "type": "image_picker",
          "id": "before_image",
          "label": "Before image"
        },
        {
          "type": "image_picker",
          "id": "after_image",
          "label": "After image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Transformation title",
          "default": "Acne Clearing Results"
        },
        {
          "type": "text",
          "id": "timeframe",
          "label": "Timeframe",
          "default": "After 8 weeks"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Significant improvement in skin clarity and texture using our turmeric face mask daily."
        },
        {
          "type": "product",
          "id": "product",
          "label": "Featured product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Before & After Gallery",
      "blocks": [
        {
          "type": "transformation"
        },
        {
          "type": "transformation",
          "settings": {
            "title": "Anti-Aging Results",
            "timeframe": "After 12 weeks",
            "description": "Visible reduction in fine lines and improved skin elasticity with our vitamin C serum."
          }
        }
      ]
    }
  ]
}
{% endschema %}
