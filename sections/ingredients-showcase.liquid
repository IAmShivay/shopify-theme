{{ 'section-ingredients-showcase.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .ingredients-showcase-{{ section.id }} {
    background: {{ section.settings.background_color }};
    {% if section.settings.background_gradient != blank %}
      background: {{ section.settings.background_gradient }};
    {% endif %}
  }
{%- endstyle -%}

<div class="ingredients-showcase ingredients-showcase-{{ section.id }} color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding isolate">
    {%- if section.settings.heading != blank -%}
      <div class="ingredients-showcase__header center">
        <h2 class="ingredients-showcase__heading inline-richtext {{ section.settings.heading_size }}">
          {{ section.settings.heading }}
        </h2>
        {%- if section.settings.subheading != blank -%}
          <p class="ingredients-showcase__subheading">{{ section.settings.subheading }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      <div class="ingredients-showcase__grid">
        {%- for block in section.blocks -%}
          <div class="ingredients-showcase__item" {{ block.shopify_attributes }}>
            <div class="ingredient-card">
              {%- if block.settings.image != blank -%}
                <div class="ingredient-card__image">
                  {{
                    block.settings.image
                    | image_url: width: 300
                    | image_tag:
                      loading: 'lazy',
                      width: 150,
                      height: 150,
                      alt: block.settings.image.alt | escape
                  }}
                </div>
              {%- endif -%}
              
              <div class="ingredient-card__content">
                {%- if block.settings.name != blank -%}
                  <h3 class="ingredient-card__name">{{ block.settings.name }}</h3>
                {%- endif -%}
                
                {%- if block.settings.scientific_name != blank -%}
                  <p class="ingredient-card__scientific">{{ block.settings.scientific_name }}</p>
                {%- endif -%}
                
                {%- if block.settings.description != blank -%}
                  <p class="ingredient-card__description">{{ block.settings.description }}</p>
                {%- endif -%}
                
                {%- if block.settings.benefits != blank -%}
                  <div class="ingredient-card__benefits">
                    <h4 class="ingredient-card__benefits-title">Key Benefits:</h4>
                    <div class="ingredient-card__benefits-list">
                      {{ block.settings.benefits }}
                    </div>
                  </div>
                {%- endif -%}
                
                {%- if block.settings.origin != blank -%}
                  <div class="ingredient-card__origin">
                    <span class="ingredient-card__origin-label">Origin:</span>
                    <span class="ingredient-card__origin-text">{{ block.settings.origin }}</span>
                  </div>
                {%- endif -%}
              </div>
            </div>
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Ingredients Showcase",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Pure Natural Ingredients",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "subheading",
      "default": "Discover the powerful botanicals and organic compounds that make our skincare products so effective",
      "label": "Subheading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "background-1"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color"
    },
    {
      "type": "color_background",
      "id": "background_gradient",
      "label": "Background gradient"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "ingredient",
      "name": "Ingredient",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Ingredient image"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Ingredient name",
          "default": "Turmeric"
        },
        {
          "type": "text",
          "id": "scientific_name",
          "label": "Scientific name",
          "default": "Curcuma longa"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "A powerful anti-inflammatory spice that has been used for centuries in traditional medicine and skincare."
        },
        {
          "type": "richtext",
          "id": "benefits",
          "label": "Key benefits",
          "default": "<ul><li>Reduces inflammation</li><li>Brightens skin tone</li><li>Fights acne-causing bacteria</li><li>Rich in antioxidants</li></ul>"
        },
        {
          "type": "text",
          "id": "origin",
          "label": "Origin",
          "default": "India & Southeast Asia"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Ingredients Showcase",
      "blocks": [
        {
          "type": "ingredient"
        },
        {
          "type": "ingredient",
          "settings": {
            "name": "Aloe Vera",
            "scientific_name": "Aloe barbadensis",
            "description": "A soothing succulent known for its healing and moisturizing properties.",
            "benefits": "<ul><li>Deeply hydrates skin</li><li>Soothes irritation</li><li>Promotes healing</li><li>Anti-aging properties</li></ul>",
            "origin": "Arabian Peninsula"
          }
        },
        {
          "type": "ingredient",
          "settings": {
            "name": "Rose Hip Oil",
            "scientific_name": "Rosa canina",
            "description": "A nutrient-rich oil packed with vitamins and essential fatty acids.",
            "benefits": "<ul><li>Reduces fine lines</li><li>Evens skin tone</li><li>Boosts collagen</li><li>Deeply nourishing</li></ul>",
            "origin": "Chile & Europe"
          }
        }
      ]
    }
  ]
}
{% endschema %}
