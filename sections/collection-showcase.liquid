{{ 'section-collection-showcase.css' | asset_url | stylesheet_tag }}
{{ 'component-slider.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .collection-showcase-{{ section.id }} {
    background: {{ section.settings.background_color }};
    {% if section.settings.background_gradient != blank %}
      background: {{ section.settings.background_gradient }};
    {% endif %}
  }
{%- endstyle -%}

<div class="collection-showcase collection-showcase-{{ section.id }} color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding isolate">
    {%- if section.settings.heading != blank -%}
      <div class="collection-showcase__header center">
        <h2 class="collection-showcase__heading inline-richtext {{ section.settings.heading_size }}">
          {{ section.settings.heading }}
        </h2>
        {%- if section.settings.subheading != blank -%}
          <p class="collection-showcase__subheading">{{ section.settings.subheading }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      <slider-component class="slider-mobile-gutter">
        <ul
          class="collection-showcase__slider contains-scroll-bar grid grid--1-col slider slider--tablet grid--2-col-tablet slider--desktop grid--3-col-desktop"
          id="Slider-{{ section.id }}"
          role="list"
        >
          {%- for block in section.blocks -%}
            {%- if block.settings.collection != blank -%}
              {%- assign collection = block.settings.collection -%}
              <li
                id="Slide-{{ section.id }}-{{ forloop.index }}"
                class="collection-showcase__slide grid__item slider__slide"
                {{ block.shopify_attributes }}
              >
                <div class="collection-card">
                  <div class="collection-card__image">
                    {%- if collection.featured_image -%}
                      <a href="{{ collection.url }}">
                        {{
                          collection.featured_image
                          | image_url: width: 600
                          | image_tag:
                            loading: 'lazy',
                            width: 300,
                            height: 200,
                            alt: collection.featured_image.alt | escape
                        }}
                      </a>
                    {%- else -%}
                      <div class="collection-card__placeholder">
                        {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
                      </div>
                    {%- endif -%}
                    <div class="collection-card__overlay">
                      <div class="collection-card__stats">
                        <span class="collection-card__count">{{ collection.products_count }} items</span>
                      </div>
                    </div>
                  </div>
                  
                  <div class="collection-card__content">
                    <h3 class="collection-card__title">
                      <a href="{{ collection.url }}">{{ collection.title }}</a>
                    </h3>
                    
                    {%- if collection.description != blank -%}
                      <p class="collection-card__description">
                        {{ collection.description | strip_html | truncate: 120 }}
                      </p>
                    {%- endif -%}
                    
                    <div class="collection-card__button">
                      <a href="{{ collection.url }}" class="button button--primary">
                        Shop {{ collection.title }}
                      </a>
                    </div>
                  </div>
                </div>
              </li>
            {%- endif -%}
          {%- endfor -%}
        </ul>

        {%- if section.blocks.size > 3 -%}
          <div class="slider-buttons no-js-hidden">
            <button
              type="button"
              class="slider-button slider-button--prev"
              name="previous"
              aria-label="Previous slide"
            >
              <span class="svg-wrapper">
                {{- 'icon-caret.svg' | inline_asset_content -}}
              </span>
            </button>
            <div class="slider-counter caption">
              <span class="slider-counter--current">1</span>
              <span aria-hidden="true"> / </span>
              <span class="visually-hidden">of</span>
              <span class="slider-counter--total">{{ section.blocks.size }}</span>
            </div>
            <button
              type="button"
              class="slider-button slider-button--next"
              name="next"
              aria-label="Next slide"
            >
              <span class="svg-wrapper">
                {{- 'icon-caret.svg' | inline_asset_content -}}
              </span>
            </button>
          </div>
        {%- endif -%}
      </slider-component>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Collection Showcase",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Shop by Category",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "subheading",
      "default": "Discover our curated collections of premium kitchenware",
      "label": "Subheading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "background-1"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color"
    },
    {
      "type": "color_background",
      "id": "background_gradient",
      "label": "Background gradient"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection Showcase",
      "blocks": [
        {
          "type": "collection"
        },
        {
          "type": "collection"
        },
        {
          "type": "collection"
        }
      ]
    }
  ]
}
{% endschema %}
